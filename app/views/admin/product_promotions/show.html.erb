<h2><%= Promotion.human_name %></h2>
<p>
  <%= Promotion.human_attribute_name(:name) %>: <%= @promotion.name %>
</p>
<p>
  <%= Promotion.human_attribute_name(:combine) %>: <%= @promotion.combine ? t(:yes) : t(:no) %>
</p>
<p>
  <%= t(:from) + " " + @promotion.start_at.to_s(:short_date) if @promotion.start_at %>
  <%= t(:to)  + " " +  @promotion.end_at.to_s(:short_date) if @promotion.end_at %>
</p>
<p>
  <%= Promotion.human_attribute_name(:zone) %>: <%= @promotion.zone.name %>
</p>
<p>
  <%= Promotion.human_attribute_name(:promoted) %>:
  <%= link_to_promoted(@promotion.promoted) %>
</p>
<p>
  <%= Promotion.human_attribute_name(:description) %>:<br />
  <%= @promotion.description %>
</p>
